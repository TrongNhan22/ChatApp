@page
@model ChatApp.Pages.UserModel
@using ChatApp.Models

@{
    ViewData["Title"] = "User";
    var userConnection = new ConnectionDatabase();
    var userName = "6534e66f77ca367b832706e6";
    var user = userConnection.GetUser(userName);
    var gender = "";
    if ((user[6]) == 1)
    {
        gender = "Nam";
    }
    else gender = "Nữ";
}
<head>
    <link rel="stylesheet" href="./css/user.css"/>
</head>

<h4 class="mt-3">Thông tin người dùng</h4>
<form id="myForm" class="row g-3 mt-2">
    <div class="col-md-6 image-frame">
        <img src="./images/image-regular.svg" class="img-fluid w-50"/>
    </div>
    <div class="col-md-6">
        <div class="col-12">
            <label for="inputUserName" class="form-label">Họ và tên</label>
            <input type="text" class="form-control" placeholder="@user[5]" id="inputUserName" disabled>
        </div>
        <div class="col-12">
            <label for="inputGender" class="form-label">Giới tính</label>
            <select class="form-control" id="inputGender" placehoder="@gender" name="gender" disabled>
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
            </select>
        </div><div class="col-12">
            <label for="inputBirthday" class="form-label">Ngày sinh</label>
            <input type="date" class="form-control" placeholder="@user[4]" id="inputBirthday" disabled>
        </div>
        <div class="col-12">
            <label for="inputAdd" class="form-label">Địa chỉ</label>
            <input type="text" class="form-control" placeholder="@user[7]" id="inputAdd" disabled>
        </div>
        <div class="col-12">
            <label for="inputEm" class="form-label">Địa chỉ Email</label>
            <input type="email" class="form-control" placeholder="@user[1]" id="inputEm"  disabled>
        </div>
    </div>
    <div class="text-right">
        <button id="buttonSubmit" onclick="enableForm()" type="button" class="btn btn-info ">Chỉnh sửa</button>
    </div>
    
</form>

<script>
    function enableForm() {
        var formElements = document.getElementsByTagName("input");
        var selectElement = document.getElementById("inputGender");
        var button = document.getElementById("buttonSubmit");

        for (var i = 0; i < formElements.length; i++) {
            formElements[i].disabled = false;
        }
        selectElement.disabled = false;
        button.disabled = false;
        button.innerHTML = "Lưu";
    }
</script>

